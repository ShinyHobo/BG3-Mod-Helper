<UserControl x:Class="bg3_mod_packer.Views.DragAndDropBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:bg3_mod_packer.Views"
             xmlns:viewModels="clr-namespace:bg3_mod_packer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100">
            <Rectangle x:Name="Rectangle" Height="100" Width="100" Fill="Transparent" AllowDrop="True"/>
        </Border>
    </Grid>
</UserControl>

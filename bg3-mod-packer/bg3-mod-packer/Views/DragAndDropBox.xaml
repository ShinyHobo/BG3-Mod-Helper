<UserControl x:Class="bg3_mod_packer.Views.DragAndDropBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:bg3_mod_packer.Views"
             xmlns:viewModels="clr-namespace:bg3_mod_packer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Rectangle  HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" AllowDrop="True" Fill="LightBlue" Stroke="#FF000000" 
                    StrokeThickness="1" StrokeDashArray="4 4" SnapsToDevicePixels="True" RadiusX="10" RadiusY="10"/>
        <TextBlock Text="Drop mod workspace folder here" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,27,10,19" Width="80" Height="54" TextWrapping="Wrap" TextAlignment="Center" AllowDrop="True"/>
    </Grid>
</UserControl>
